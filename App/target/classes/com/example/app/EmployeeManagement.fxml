<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.EmployeeController" spacing="10" padding="10">
    <TextField fx:id="employeeIDField" promptText="Employee ID" />
    <TextField fx:id="nameField" promptText="Name" />
    <TextField fx:id="ageField" promptText="Age" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="departmentField" promptText="Department" />
    <Button text="Create Employee Table" onAction="#createEmployeeTable" />
    <Button text="Delete Employee Table" onAction="#deleteEmployeeTable" />
    <Button text="Register Employee" onAction="#registerEmployee" />
    <Button text="View Employees" onAction="#viewEmployees" />
    <Button text="Update Employee Info" onAction="#updateEmployeeInfo" />
</VBox>
